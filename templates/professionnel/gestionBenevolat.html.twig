				$(document).ready( function() {
			if ( $.fn.DataTable.isDataTable( '#dataTable3' ) ) {
				$( '#dataTable3' ).DataTable().destroy();
			}
			$( '#dataTable3' ).dataTable( {
				"language": {
					"url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
				},rowReorder: {
				selector: 'td:nth-child(2)'
				},
        		responsive: true,
				"bSort": false,
				"bDestroy": true
			} );
			} );

				</script>
{% endblock %}