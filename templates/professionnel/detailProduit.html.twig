{% extends '/professionnel/baseProfessionnel.html.twig' %}
 {% block body %}  
            
<div class="page-heading">
    <h3>Ajout Produit </h3>
</div>
<div class="page-content">
    <section class="row">
        <div class="col-12 ">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form class="form form-horizontal">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>Titre<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group has-icon-left">
                                                <div class="position-relative">
                                                    <input type="text" class="form-control" disabled value="{{ad.titre}}"
                                                        id="first-name-icon">
                                                    <div class="form-control-icon">
                                                        <i class="bi bi-person"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-4">
                                            <label>Prix<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group has-icon-left">
                                                <div class="position-relative">
                                                    <input type="number" class="form-control" disabled value="{{ad.prix}}">
                                                    <div class="form-control-icon">
                                                        <i class="bi bi-phone"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Categirie <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group has-icon-left">
                                                <div class="position-relative">
                                                    <input type="text" class="form-control" disabled value="{{ad.categorie}}">
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Description <span class="text-danger">*</span></label>
                                        </div>
                                            <div class="col-md-8">
                                                <div class="form-group with-title mb-3">
                                                    <textarea class="form-control" id="exampleFormControlTextarea1" disabled  rows="3">{{ad.description}}</textarea>
                                                    <label>Descriptez vos produit</label>
                                                </div>
                                            </div>
                                        
                                        <div class="col-12 d-flex justify-content-end">
                                            <a href="/professionnel/gestionProduit" class="btn btn-primary me-1 mb-1">Retourner</a>

                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </section>
</div>

{% endblock %}