{% extends '/admin/baseAdmin.html.twig' %}
 {% block body %}  
            
<div class="page-heading">
    <h3>Profile </h3>
</div>
<div class="page-content">
    <section class="row">
        <div class="col-12 ">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                        
                        <h5 class="mt-4">Change password :</h5>
                        {{ form_start(formChangePassword) }}
                            <div class="row mt-3">

                                <div class="col-md-12">
                                <div class="mb-3">
                                    <div class="form-icon position-relative">
                                        <label for="{{ formChangePassword.password.children["first"].vars.id }}">{{ formChangePassword.password.children["first"].vars.label }}</label>
                                        <input type="password" placeholder="Password" class="form-control ps-5" id="{{ formChangePassword.password.children["first"].vars.id }}"
                                            name="{{ formChangePassword.password.children["first"].vars.full_name }}">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <div class="form-icon position-relative">
                                        <label for="{{ formChangePassword.password.children["second"].vars.id }}">{{ formChangePassword.password.children["second"].vars.label }}</label>
                                        <input type="password" placeholder="Repeat Password" class="form-control ps-5" id="{{ formChangePassword.password.children["second"].vars.id }}"
                                            name="{{ formChangePassword.password.children["second"].vars.full_name }}">
                                    </div>
                                </div>
                            </div>
                           {% do formChangePassword.password.setRendered %}

                                <div class="col-12 d-flex justify-content-end">
                                    <button class="btn btn-primary">Save Password</button>
                                </div><!--end col-->
                            </div><!--end row-->
                        {{ form_end(formChangePassword) }}
                        </div>
                    </div>
            </div>
        </div>
    </section>
</div>

 {% endblock %}
