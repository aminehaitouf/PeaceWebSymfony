{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
<section class="bg-home bg-light d-flex align-items-center">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="text-center">
                <div class="icon d-flex align-items-center justify-content-center bg-soft-primary rounded-circle mx-auto" style="height: 90px; width:90px;">
                    <i class="uil uil-thumbs-up align-middle h1 mb-0"></i>
                </div>
                <h1 class="my-4 fw-bold">Verification</h1>
                {{ form_start(form) }}


					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.username }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}

					<h1 class="h3 mb-3 font-weight-normal">Merci de saisir votre nouveau mot de passe</h1>
					<input type="password" class="d-none" name="code" value="{{code}}">
					<center>
						<div class="col-lg-6 ">
							{{form_widget(form.password,{attr:{class:"form-control"}})}}
						</div>
					</center>



					<button class="btn btn-lg btn-primary mt-2" type="submit">Modifier</button>
			{{ form_end(form) }}
            </div>
        </div><!--end col-->
    </div><!--end row-->
</div> <!--end container-->
</section>

{% endblock %}
