                                            {% if reservations.ads.user.domaine == "Restaurant" and reservations.ads.titre == "Réserver une table" %}
                                                    {{reservations.ads.prix }}€
                                            {% else %}
                                                
                                            {% if reservations.ads.user.reduction != null %}
                                                {{reservations.ads.prix - (reservations.ads.prix * reservations.ads.user.reduction / 100)}}€
                                            {% else %}
                                                {{reservations.ads.prix}}€
                                            {% endif %}
                                            {% endif %}
                                            
                                        
                                        </td>
                                        
                                    </tr>

                                   
                                </tbody>
                            </table>
                        </div>
                    </div><!--end col-->
                </div><!--end row-->
                <div class="row">
                    <div class="col-lg-8 col-md-6 mt-4 pt-2">
                        <!-- <a href="javascript:void(0)" class="btn btn-primary">Shop More</a> -->
                        <a href="choixReservation" class="btn btn-soft-primary ms-2">Modifier la commande</a>
                    </div>
                    <div class="col-lg-4 col-md-6 ms-auto mt-4 pt-2">
                        <div class="table-responsive bg-white rounded shadow">
                            <table class="table table-center table-padding mb-0">
                                <tbody>
                                {% if reservations.ads.user.reduction  %}
                                    <tr>
                                        <td class="h6 ps-4 py-3">Sous-total</td>
                                        <td class="text-end fw-bold pe-4">
                                        {% if reservations.ads.user.domaine == "Restaurant" and reservations.ads.titre == "Réserver une table" %}
                                            {{reservations.ads.prix}} €
                                        {% else %}
                                    
                                            {% if reservations.ads.user.reduction != null %}
                                                {{reservations.ads.prix}} €
                                            {% else %}
