{% extends '/association/baseAssociation.html.twig' %}
 {% block body %}  
            
<div class="page-heading">
    <h3>Profil </h3>
</div>
<div class="page-content">
    <section class="row">
        <div class="col-12 ">
                <div class="card">
                    <div class="card-header">
                
                    </div>
                    
                    <div class="card-content">
                        <div class="card-body">
                        {{ form_start(form,{attr:{class:"form form-horizontal"}}) }} 
                                <div class="form-body">
                                    <div class="row">
                                        
                                        
                                        <div class="col-md-4">
                                            <label>Email</label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group has-icon-left">
                                                <div class="position-relative">
                                                    <input type="email" class="form-control ps-5" value="{{user.email}}" name="s" disabled>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Dénomination <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group has-icon-left">
                                                <div class="position-relative">
                                                    <input type="text" class="form-control ps-5" value="{{user.domination}}" name="s" disabled>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Siret <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group has-icon-left">
                                                <div class="position-relative">
                                                    <input type="text" class="form-control ps-5" value="{{user.siret}}" name="s" disabled>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Adresse <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group has-icon-left">
                                                <div class="position-relative">
                                                    <input type="text" class="form-control ps-5" value="{{user.adresse.nom}}" name="s" disabled>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        
                                        
                                        <div class="col-md-4">
                                            <label>Téléphone</label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group has-icon-left">
                                                <div class="position-relative">
                                                    {{ form_row(form.mobile,{attr:{class:"form-control "}}) }}
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">Photo  de l'organisme <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group has-icon-left">
                                                <div class="position-relative">
                                                    {{ form_row(form.illustration,{attr:{class:"form-control"}}) }}
                                                    
                                                </div>
                                            </div>
                                        </div>
                                      
                                        <div class="col-12 d-flex justify-content-end">
                                            <button type="submit" class="btn btn-primary me-1 mb-1">Enregistrer</button>
                                            <button type="reset"
                                                class="btn btn-light-secondary me-1 mb-1">Annuler</button>
                                        </div>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        <h5 class="mt-4">Modifier votre mot de passe :</h5>
                        {{ form_start(formChangePassword) }}
                            <div class="row mt-3">

                                <div class="col-md-12">
                                <div class="mb-3">
                                    <div class="form-icon position-relative">
                                        <label for="{{ formChangePassword.password.children["first"].vars.id }}">{{ formChangePassword.password.children["first"].vars.label }}</label>
                                        <input type="password" placeholder="Mot de passe" class="form-control ps-5" id="{{ formChangePassword.password.children["first"].vars.id }}"
                                            name="{{ formChangePassword.password.children["first"].vars.full_name }}">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <div class="form-icon position-relative">
                                        <label for="{{ formChangePassword.password.children["second"].vars.id }}">{{ formChangePassword.password.children["second"].vars.label }}</label>
                                        <input type="password" placeholder="Confirmer votre mot de passe" class="form-control ps-5" id="{{ formChangePassword.password.children["second"].vars.id }}"
                                            name="{{ formChangePassword.password.children["second"].vars.full_name }}">
                                    </div>
                                </div>
                            </div>
                           {% do formChangePassword.password.setRendered %}

                                <div class="col-12 d-flex justify-content-end">
                                    <button class="btn btn-primary">Enregistrer</button>
                                    <button type="reset"
                                                class="btn btn-light-secondary me-1 mb-1">Annuler</button>
                                </div><!--end col-->
                            </div><!--end row-->
                        {{ form_end(formChangePassword) }}
                        </div>
                    </div>
            </div>
        </div>
    </section>
</div>

 {% endblock %}
